import java.util.Scanner;

public class ExecutaCompra {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Criar produto
        Produto produto = new Produto();
        System.out.print("Código do produto: ");
        produto.codigo = sc.nextLine();
        System.out.print("Nome do produto: ");
        produto.nome = sc.nextLine();
        System.out.print("Preço unitário do produto: ");
        produto.preco = sc.nextDouble();
        sc.nextLine(); // limpar quebra de linha

        // Criar cidade
        Cidade cidade = new Cidade();
        System.out.print("Nome da cidade do cliente: ");
        cidade.nome = sc.nextLine();
        System.out.print("UF da cidade: ");
        cidade.UF = sc.nextLine();

        // Criar cliente
        Cliente cliente = new Cliente();
        System.out.print("Nome do cliente: ");
        cliente.nome = sc.nextLine();
        System.out.print("Documento do cliente: ");
        cliente.documento = sc.nextLine();
        cliente.cidade = cidade;

        // Criar item do pedido
        ItemPedido item = new ItemPedido();
        item.produto = produto;
        item.sequencial = 1;
        System.out.print("Quantidade comprada: ");
        item.quantidade = sc.nextDouble();

        // Criar pedido
        Pedido pedido = new Pedido();
        pedido.numero = "PED001";
        pedido.cliente = cliente;
        pedido.itemPedido = item;

        // Imprimir os resultados
        System.out.println("\n----- RESUMO DA COMPRA -----");
        System.out.println("Cliente: " + cliente.nome + " (" + cliente.documento + ")");
        System.out.println("Cidade: " + cliente.cidade.nome + " - " + cliente.cidade.UF);
        System.out.println("Produto: " + produto.nome);
        System.out.println("Preço unitário: R$" + produto.preco);
        System.out.println("Quantidade: " + item.quantidade);
        

        sc.close();
    }
}
